class Book:
    def __init__(self, title, author, pages):
        self.title = title
        self.author = author
        self.pages = pages

    def open(self):
        print(f"Книга \"{self.title}\" открыта на первой странице.")

    def read(self):
        print(f"Читаем книгу \"{self.title}\" автора {self.author}.")

    def close(self):
        print(f"Книга \"{self.title}\" закрыта.")

    def info(self):
        print(f"\"{self.title}\" - {self.author}, {self.pages} стр.")


class BankAccount:
    interest_rate = 0.05

    @staticmethod
    def is_valid_amount(amount):
        return isinstance(amount, (int, float)) and amount > 0

    def __init__(self, owner, balance=0):
        self.owner = owner
        self.balance = balance

    def deposit(self, amount):
        if not self.is_valid_amount(amount):
            print("Некорректная сумма!")
        else:
            self.balance += amount
            print(f"Счёт {self.owner} пополнился на {amount:.2f}. Текущий баланс: {self.balance:.2f}.")

    def withdraw(self, amount):
        if not self.is_valid_amount(amount):
            print("Некорректная сумма!")
        elif amount > self.balance:
            print("Недостаточно средств!")
        else:
            self.balance -= amount
            print(f"Снятие {amount:.2f} успешно выполнено. Осталось на счету: {self.balance:.2f}.")

    @classmethod
    def set_interest_rate(cls, new_rate):
        cls.interest_rate = new_rate
        print(f"Процентная ставка изменена на {cls.interest_rate * 100}%.")


class LibraryBook(Book):
    def __init__(self, title, author, pages):
        super().__init__(title, author, pages)
        self.reader = None

    def take(self, name):
        if self.reader is not None:
            print("Книга уже выдана.")
        else:
            self.reader = name
            print(f"Книга выдана: {name}.")

    def return_back(self):
        if self.reader is None:
            print("Книга и так в библиотеке.")
        else:
            print(f"Книга возвращена.")
            self.reader = None
